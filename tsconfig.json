{
   "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      // "noImplicitAny": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "skipLibCheck": true,
      "paths":{
        "*": ["node_modules/*", "src/types/*"]
      }
   },
   "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ],
    "lib": [
      "es2015"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "express",
    ]
}